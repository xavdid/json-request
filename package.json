{
  "name": "@xavdid/json-requests",
  "version": "0.2.1",
  "description": "An extremely simple package for GETting and POSTing JSON.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:types": "tsd",
    "validate": "yarn test && yarn test:types && yarn lint",
    "clean": "rm -rf lib"
  },
  "keywords": [],
  "files": [
    "lib/*.js",
    "lib/*.d.ts"
  ],
  "author": {
    "name": "David Brownman",
    "email": "beamneocube@gmail.com",
    "url": "https://xavd.id"
  },
  "repository": "github:xavdid/json-requests",
  "license": "ISC",
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@swc/core": "^1.3.27",
    "@swc/jest": "0.2.24",
    "@types/jest": "^29.2.6",
    "@types/node-fetch": "^2.6.2",
    "eslint-config-xavdid": "^3.0.0",
    "eslint": "^7",
    "jest": "^29.3.1",
    "nock": "^13.3.0",
    "prettier": "^2.8.3",
    "tsd": "0.25.0",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "node-fetch": "^2.6.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
